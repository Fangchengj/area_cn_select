<div class="alert alert-info">
  <h3>form_for</h3>
  <%= form_for @company,:builder => AreaSelectCn::Helpers::FormBuilder,:html => { :class => 'form-horizontal' } do |f| %>
    <%= f.area_select :region_code,:theme=>:bootstrap %>
    <%= f.submit "提交"%>
  <%end%>
</div>

<div class="alert alert-info">
  <h3>simple_form_for</h3>
  <%= simple_form_for @company,:html => { :class => 'form-horizontal' } do |f|%>
    <%= f.input :region_code,:as => :area_select_ul, :prompt_class=>"btn btn-success"%>
    <div class="form-actions">
      <%= f.submit "提交",:class=>"btn btn-success"%>
    </div>
  <%end%>
</div>

<div class="alert alert-info">
  <h3>form_tag</h3>
  <%= form_tag "" do %>
    <%= area_select_ul(:company,:region_code,"331000",:theme=>:bootstrap,:prompt_class=>"btn btn-danger") %>
    <%= submit_tag "提交"%>
  <%end%>
</div>
